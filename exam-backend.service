[Unit]
Description=Online Exam System Backend
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/root/CodeDojo/backend
ExecStart=/root/CodeDojo/backend/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker -b unix:/tmp/exam.sock main:app
Restart=always
RestartSec=5
Environment="DATABASE_URL=postgresql://admin:password@localhost:5432/example_db"
Environment="ADMIN_IPS=127.0.0.1"
Environment="IP_WHITELIST="

[Install]
WantedBy=multi-user.target
